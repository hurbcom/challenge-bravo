    "paths": {
        "/currency": {
            "post": {
                "tags": [
                    "Currencies"
                ],
                "summary": "Create a Currency",
                "description": "Create a new currency",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "code": {
                                        "type": "string"
                                    },
                                    "valueInUSD": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Currency de Teste",
                                    "code": "MDT",
                                    "valueInUSD": 1.34
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Currency already exists"
                    },
                    "500": {
                        "description": "internal Error"
                    }
                }
            },
            "get": {
                "tags": [
                    "Currencies"
                ],
                "summary": "List all Currencies",
                "description": "List all Currencies",
                "responses": {
                    "200": {
                        "description": "Success"

                    }
                }
            }
        },
        "/currency/edit/{id}": {
            "put": {
                "tags": [
                    "Currencies"
                ],
                "summary": "Update a Currency",
                "description": "Update a new currency",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Currency id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "code": {
                                        "type": "string"
                                    },
                                    "valueInUSD": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Currency de Teste",
                                    "code": "MDT",
                                    "valueInUSD": 1.34
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Success!"
                    },
                    "500": {
                        "description": "internal Error"
                    }
                }
            }
        },
        "/currency/{id}": {
            "delete": {
                "tags": [
                    "Currencies"
                ],
                "summary": "Update a Currency",
                "description": "Update a new currency",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Currency id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Currency Deleted"
                    },
                    "500": {
                        "description": "internal Error"
                    }
                }
            }
        },
        "/currency/conversion": {
            "get": {
                "tags": [
                    "Currencies"
                ],
                "summary": "Conversion of Currencies",
                "description": "Conversion of Currencies",
                "parameters": [
                    {
                        "name": "params",
                        "in": "query",
                        "description": "Currency query",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "string"
                                },
                                "to": {
                                    "type": "string"
                                },
                                "amount": {
                                    "type": "number"
                                }
                            },
                            "example": {
                                "from": "USD",
                                "to": "EUR",
                                "amount": 1.34
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/currency/currentQuote": {
            "get": {
                "tags": [
                    "Currencies"
                ],
                "summary": "Get Current Quote",
                "description": "Get Current Quote",
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}