{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "warn",
        "no-unused-vars": "warn",
        "indent": ["warn", 4],
        "quotes": ["warn"],
        "space-before-function-paren": "warn",
        "eol-last": "warn",
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreStrings": true
            }
        ]
    }
}
