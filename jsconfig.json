{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@helper/*": ["src/helper/*"],
      "@model/*": ["src/model/*"],
      "@middleware/*": ["src/middleware/*"],
      "@service/*": ["src/service/*"],
      "@controller/*": ["src/controller/*"],
      "@db/*": ["/src/db/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}