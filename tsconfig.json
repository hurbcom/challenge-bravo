{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "build",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "ES2019",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"]
}
