{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "rootDirs": ["src"],
        "plugins": [
            {
                "transform": "ts-transform-paths",
                "afterDeclarations": true
            }
        ],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "jest.config.js", "dist"]
}
